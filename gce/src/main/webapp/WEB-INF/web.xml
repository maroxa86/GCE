<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Gestion Centro Escolar</display-name>
  
  <welcome-file-list>
    <welcome-file>mostrarAlumnos.do</welcome-file>
  </welcome-file-list>
  
  <error-page>
    <exception-type>java.lang.RuntimeException</exception-type>
    <location>/error.jsp</location>
  </error-page>
  
  <servlet>
    <description>Servlet encargado de gestionar las acciones del modulo de alumnos</description>
    <servlet-name>ControladorAlumnos</servlet-name>
    <servlet-class>org.maroxa.gce.controlador.ControladorAlumnos</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControladorAlumnos</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
</web-app>